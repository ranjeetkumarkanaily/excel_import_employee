  gem 'rb-fsevent'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'guard-bundler'
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'simplecov'
  gem 'database_cleaner'
end

